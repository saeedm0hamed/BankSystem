<script>
    document.addEventListener('DOMContentLoaded', function() {
        particlesJS.load('particles-js', '/assets/particles.json');

        new Typed('#typed', {
            strings: ['Bank Management System <img src="/assets/bag.svg" style="height: 0.7em; vertical-align: middle;">',
                      'Bank Management System <img src="/assets/wings.svg" style="height: 0.7em; vertical-align: middle;"> ^500',
                      'Bank Management System <img src="/assets/bank.svg" style="height: 0.6em; vertical-align: middle;"> ^500',
                     ],
            typeSpeed: 50,
            showCursor: false,
            smartBackspace: true,
            startDelay: 500,
        });
    });
</script>
