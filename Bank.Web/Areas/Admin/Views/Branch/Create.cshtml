@model Branch  

  <div class="card shadow border-0 mt-4">  
  	<div class="card-header ml-0 py-3" style="background: conic-gradient(from -140.06deg, #020401, #656565)">  
  		<div class="row">  
  			<div class="col-12 text-center">  
  				<h1 class="text-white py-2">New Branch Creation</h1>  
  			</div>  
  		</div>  
  	</div>  

  	<div class="card-body p-4">
        <input asp-for="Employees" class="form-control" hidden />

        <form method="post" class="row">  
  			<div class="p-3">  
  				<div class="pb-2">  
  					<label asp-for="Name"></label>  
  					<input asp-for="Name" class="form-control" placeholder="Branch A"/>  
  					<span asp-validation-for="Name" class="text-danger"></span>  
  				</div>
                <div class="pb-2">
                    <label asp-for="Location" class="p-1"></label>
                    <input asp-for="Location" class="form-control" placeholder="Cairo"/>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="pb-2">  
  					<label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" type="tel" placeholder="0000000" />
                    <span asp-validation-for="Phone" class="text-danger"></span>  
  				</div>   
  				<div class="pb-2">
                    <label asp-for="OpenDate"></label>
                    <input asp-for="OpenDate" class="form-control" type="date" />
                    <span asp-validation-for="OpenDate" class="text-danger"></span>  
  				</div>
                <div class="row row-cols-auto">  
  					<div class="col">  
  						<button type="submit" class="btn btn-primary" style="width:150px">CREATE</button>  
  					</div>  

  					<div class="col p-0">  
  						<a asp-controller="Branch" asp-action="Index" class="btn btn-outline-secondary">  
  							BACK  
  						</a>  
  					</div>  
  				</div>  


  			</div>  
  		</form>  
  	</div>  
  </div>  

@* Client-side validation   *@
  @section Scripts{   
  	@{  
  		<partial name="_ValidationScriptsPartial"></partial>  
  	}  
  }