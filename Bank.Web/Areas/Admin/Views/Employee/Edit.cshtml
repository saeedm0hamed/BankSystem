  @model Employee  

  <form method="post">  
  	<div class="border p-3 mt-4">  

  		<div class="row pb-2">  
  			<h1>Edit Existing Employee</h1>  
  			<hr />  
  		</div>  

  		<div class="mb-3 row p-1">  
  			<label asp-for="Name" class="p-1"></label>  
  			<input asp-for="Name" class="form-control" />  
  			<span asp-validation-for="Name" class="text-danger"></span>  
  		</div>  
  		<div class="mb-3 row p-1">  
  			<label asp-for="NationalID" class="p-1"></label>  
  			<input asp-for="NationalID" class="form-control" />  
  			<span asp-validation-for="NationalID" class="text-danger"></span>  
  		</div> 
  		<div class="mb-3 row p-1">  
  			<label asp-for="Phone" class="p-1"></label>  
  			<input asp-for="Phone" class="form-control" />  
  			<span asp-validation-for="Phone" class="text-danger"></span>  
  		</div> 
  		<div class="mb-3 row p-1">  
  			<label asp-for="Branch" class="p-1"></label>
            <select asp-for="BranchId" class="form-select">
                <option value="">-- Select Branch --</option>
                @if (ViewBag.Branches != null)
                {
                    foreach (SelectListItem branch in ViewBag.Branches)
                    {
                        <option value="@branch.Value">@branch.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="BranchId" class="text-danger"></span>
  		</div>   
          <div class="mb-3 row p-1">
              <label asp-for="Salary" class="p-1"></label>
            <input asp-for="Salary" class="form-control" type="number" />
              <span asp-validation-for="Salary" class="text-danger"></span>
          </div>
          <div class="mb-3 row p-1">
              <label asp-for="Email" class="p-1"></label>
              <input asp-for="Email" class="form-control" />
              <span asp-validation-for="Email" class="text-danger"></span>
          </div>

  		<div class="row row-cols-auto">  
  			<div class="col">  
  				<button type="submit" class="btn btn-primary" style="width:150px">UPDATE</button>  
  			</div>  

  			<div class="col p-0">  
  				<a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary">  
  					BACK  
  				</a>  
  			</div>  
  		</div>  

  	</div>  

  </form>  

@* Client-side validation   *@
@section Scripts {  
    @{  
  	    <partial name="_ValidationScriptsPartial"></partial>  
    }  
  }